

<div class="container">
	<div class="post"></div>
	<form class="create_account" action="/sign_in" method="POST">
	    <h1 class="h1 text-center mb-4">Welcome Back!</h1>

	    <div class="md-form">
	        <i class="fa fa-user prefix black-text"></i>
	        <input type="text" id="orangeForm-name" class="form-control" type="text" name="user[username]">
	        <label for="orangeForm-name">Username</label>
	    </div>
	    <div class="md-form">
	        <i class="fa fa-lock prefix black-text"></i>
	        <input type="password" id="orangeForm-pass" class="form-control" type="password" name="user[password]">
	        <label for="orangeForm-pass">Password</label>
	    </div>
	    <div class="text-center">
	       <input class="btn btn-elegant round" type="submit" value="Sign In">
	    </div>
	</form>
</div>