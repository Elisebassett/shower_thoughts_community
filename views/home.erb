<% if @user %>
	<div class="container">
		<div class="row">
			<div class="col feed">
				<h1>Welcome <%= @user.name %></h1>
			</div><!-- col -->
		</div><!-- row -->
		<div class="row">
			<div class="col">
				<a href="/profile"><button type="button" class="btn btn-info round">Your Profile</button></a>
			</div>
		</div>
		<div class="row">
				<% @feed.each do |post| %>
						<div class="random_post col-6"> 
							<h4><%= post.user.username %></h4> 
							<br> 
							<p><%= post.content %></p> 
						</div>
				<% end %>
		</div>
	</div><!-- container -->

<% else %>

<div class="container_fluid home_container">
	<div class="row center"></div>
	<div class="row">
		<div class="home col">
			<h1>Welcome to the Shower Thoughts Community</h1>
			<p>Feeling existential?</p>
		</div>
	</div>
	<div class="home row">
		<div class="col">
			<a href="/create_account"><button class="btn btn-info round">CREATE ACCOUNT</button></a>
			<a href="/sign_in"><button class="btn btn-outline-info waves-effect round">SIGN IN</button></a>
		</div>
	</div>
</div>
  
<% end %>